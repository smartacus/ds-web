<div id="subheader">
  <h1><b>Editing: </b><%=h @computer.cn %> (<%=h @computer.mac_addr %>)</h1>
</div>

<% remote_form_for(@computer, :method => 'put', :url => { :action => "update" }, :update => 'content', :onsubmit => "check_form_fields()") do |f| %>
<ol class="details">
  <li><%= f.label :mac_addr, "MAC Address:" %><%= f.text_field :mac_addr %></li>
  <li><%= f.label :cn, "Name:" %><%= f.text_field :cn %></li>
  <li><%= f.label :hostname, "Hostname:" %><%= f.text_field :hostname %></li>
  <li><%= f.label :ard_field_1, "ARD Field 1:" %><%= f.text_field :ard_field_1 %></li>
  <li><%= f.label :ard_field_2, "ARD Field 2:" %><%= f.text_field :ard_field_2 %></li>
  <li><%= f.label :ard_field_3, "ARD Field 3:" %><%= f.text_field :ard_field_3 %></li>
  <li><%= f.label :ard_field_4, "ARD Field 4:" %><%= f.text_field :ard_field_4 %></li>
  <li><%= f.label :group, "Group:" %><%= f.select :group, Group.all.map { |g| g.id } %></li>
  <li><%= f.submit 'Update' %></li>
  <li>
    <%= link_to_function 'Show', "perform_search('#{@computer.mac_addr}')" %> |
    <%= link_to 'Back', root_url %>
  </li>
</ol>
<% end %>

<% ["computer_mac_addr", "computer_cn", "computer_hostname", "computer_ard_field_1", "computer_ard_field_2", "computer_ard_field_3", "computer_ard_field_4"].each do |field| %>
  <%= observe_field(field, :frequency => 0.5, :function => "update_form_fields()") %>
<% end %>
